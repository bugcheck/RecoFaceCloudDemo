<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.reconova.facecloud"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reconova.facetarget.MainActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/bottom1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:id="@+id/compare_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bule" />

            <com.reconova.facecloud.view.IconButton
                android:id="@+id/iconBtn_compare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/compare_icon_selector"
                android:text="比对"
                android:textColor="@drawable/bottom_text_selector"
                android:textSize="20sp"
                app:iconPadding="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:id="@+id/register_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bule" />

            <com.reconova.facecloud.view.IconButton
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/register_icon_selector"
                android:text="注册"
                android:textColor="@drawable/bottom_text_selector"
                android:textSize="20sp"
                app:iconPadding="6dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>